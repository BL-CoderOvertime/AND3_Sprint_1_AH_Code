<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.BookDetailsActivity">

    <EditText
            android:id="@+id/et_book_title"
            android:hint="Book Title"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    <EditText
            android:id="@+id/et_book_author"
            android:hint="Book Author"
            android:layout_margin="20dp"
           android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

<!--    <EditText
            android:id="@+id/et_book_date"
            android:hint="Publication Date"
            android:inputType="number"
            android:layout_margin="20dp"
           android:layout_width="match_parent"
            android:layout_height="wrap_content"/>-->

    <TextView
            android:text="Read?"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    <Switch
            android:id="@+id/sw_watched"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btn_confirm_book"
            android:layout_margin="15dp"
            android:text="SAVE"
            android:textColor="#fff"
            android:textStyle="bold"
            android:backgroundTint="#189918"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>